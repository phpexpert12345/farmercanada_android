<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/message_item_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8sdp"
    app:cardCornerRadius="@dimen/_8sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_8sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/message_list_item_image"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/farm_image" />

        <TextView
            android:id="@+id/message_list_item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_toRightOf="@+id/message_list_item_image"
            android:fontFamily="@font/sf_ui_semibold"
            android:text="Kin's Farm Market"
            android:textSize="@dimen/sp_16_px" />

        <TextView
            android:id="@+id/message_list_item_new_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_list_item_name_tv"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_toRightOf="@+id/message_list_active_image"
            android:fontFamily="@font/sf_ui_regular"
            android:text="5 new messages"
            android:textSize="@dimen/sp_16_px" />


        <TextView
            android:id="@+id/message_list_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:fontFamily="@font/sf_ui_regular"
            android:text="23-12-2020/20:30"
            android:textSize="@dimen/sp_12_px" />

        <ImageView
            android:id="@+id/message_list_active_image"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_below="@id/message_list_item_name_tv"
            android:layout_margin="@dimen/_5sdp"
            android:layout_toRightOf="@+id/message_list_item_image"
            android:src="@drawable/ic_active" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>