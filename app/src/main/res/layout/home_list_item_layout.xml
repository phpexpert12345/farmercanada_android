<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_5sdp"
    android:layout_marginLeft="@dimen/_8sdp"
    android:layout_marginRight="@dimen/_8sdp"
    android:layout_marginTop="@dimen/_8sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:id="@+id/home_item_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_10sdp"
        >

        <ImageView
            android:id="@+id/home_list_item_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90sdp"
            android:src="@drawable/farm_image"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            >
            <TextView
                android:id="@+id/home_list_item_layout_farmName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:fontFamily="@font/sf_ui_semibold"
                android:textSize="@dimen/sp_16_px"
                android:textColor="@color/primaryTextColor"
                android:text="Farm name"
                android:gravity="center_vertical"
                />

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/ic_save"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />


        <TextView
            android:id="@+id/home_list_item_layout_distance_tv"
            android:layout_below="@id/home_list_item_layout_farmName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:fontFamily="@font/sf_ui_regular"
            android:textSize="@dimen/sp_12_px"
            android:textColor="@color/primaryTextColor"
            android:text="2 km away from you"
            />

        </RelativeLayout>


        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/round_gray_bg"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingRight="@dimen/_8sdp"
        android:paddingTop="@dimen/_3sdp"
        android:paddingBottom="@dimen/_3sdp"
        >

        <ImageView
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_star"/>
        <TextView
            android:id="@+id/customer_home_parlour_view_holder_rating_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_ui_regular"
            android:text="4.8"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/sp_13_px"
            android:layout_marginLeft="@dimen/_5sdp"/>
    </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/round_corner_ligh_red_bg"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/home_list_item_layout_farm_img"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/follow_image"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toRightOf="@id/home_list_item_layout_farm_img"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_centerVertical="true"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_follow"/>

                <TextView
                    android:id="@+id/home_list_item_layout_farmer_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_11_px"
                    android:textColor="@color/red"
                    android:fontFamily="@font/sf_ui_regular"
                    android:text="Follow this farm"
                    android:layout_marginLeft="@dimen/_5sdp"
                    />
            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>
