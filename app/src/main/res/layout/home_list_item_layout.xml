<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_5sdp"
    android:layout_marginLeft="@dimen/_8sdp"
    android:layout_marginRight="@dimen/_8sdp"
    android:layout_marginBottom="@dimen/_8sdp"    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_8sdp">

        <ImageView
            android:id="@+id/home_list_item_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90sdp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/home_list_item_layout_farmName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:fontFamily="@font/sf_ui_semibold"
                android:textSize="@dimen/sp_14_px"
                android:textColor="@color/primaryTextColor"
                android:text="Farm name"
                android:layout_marginLeft="@dimen/_3sdp"/>

            <ImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:src="@drawable/ic_search"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_8sdp"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/home_list_item_layout_distance_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:fontFamily="@font/sf_ui_regular"
            android:textSize="@dimen/sp_12_px"
            android:textColor="@color/primaryTextColor"
            android:text="2 km away from you"
            android:layout_marginLeft="@dimen/_3sdp"
            />

        <TextView
            android:id="@+id/customer_home_parlour_view_holder_rating_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/light_gray_round_border_bg"
            android:fontFamily="@font/sf_ui_regular"
            android:paddingLeft="@dimen/dp_8_px"
            android:paddingRight="@dimen/dp_8_px"
            android:drawablePadding="@dimen/dp_8_px"
            android:drawableLeft="@drawable/ic_star"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:text="4.8"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/sp_13_px" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/round_corner_ligh_red_bg"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/home_list_item_layout_farm_img"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/home_list_item_layout_farmer_name_tv"
                android:layout_toRightOf="@id/home_list_item_layout_farm_img"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_11_px"
                android:textColor="@color/red"
                android:fontFamily="@font/sf_ui_regular"
                android:text="Follow this farm"
                android:layout_centerVertical="true"/>

        </RelativeLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>
