<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".modules.inbox.NotificationsActivity"
    android:background="@color/white">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/notification_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/primary_button_color"
        app:tabIndicatorFullWidth="false"

        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5_px"
        android:background="@color/light_gray"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/notification_viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>