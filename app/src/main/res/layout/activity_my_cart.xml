<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".modules.cart.myCart.MyCartActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:visibility="visible"
        android:id="@+id/cart_header">
        <ImageView
            android:id="@+id/cart_back"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_15sdp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_white_back_arrow"
            app:tint="@color/black" />
        <TextView
            android:id="@+id/text_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp"

            android:fontFamily="@font/sf_ui_bold"/>
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cart_header"
        android:layout_marginTop="@dimen/_15sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            tools:context=".modules.cart.myCart.MyCartActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone"
    android:id="@+id/linear_order">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtOrderType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_ui_bold"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:text="@string/order_type"
                android:textSize="@dimen/_18sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewDelivery"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:elevation="5dp"
                    app:cardCornerRadius="5dp"
                    app:cardUseCompatPadding="true">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textViewDelivery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_18sdp"
                        android:background="@color/light_gray"
                        android:gravity="center"
                        android:padding="@dimen/_8sdp"
                        android:singleLine="true"
                        android:text="@string/delivery"
                        android:textColor="@color/colorPrimaryDark" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewPickUp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:elevation="5dp"
                    app:cardCornerRadius="5dp"
                    app:cardUseCompatPadding="true">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textViewPickUp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_18sdp"
                        android:background="@color/light_gray"
                        android:gravity="center"
                        android:padding="@dimen/_8sdp"
                        android:singleLine="true"
                        android:text="@string/pickup"
                        android:textColor="@color/colorPrimaryDark" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>
</LinearLayout>


            <RelativeLayout
                android:id="@+id/cart_item_count_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_order"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_16sdp">

                <TextView
                    android:id="@+id/itemCount"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/sf_ui_semibold"
                    android:text="4 items"
                    android:visibility="gone"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="@dimen/sp_12_px" />

                <TextView
                    android:id="@+id/add_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@drawable/ic_add_white"
                    android:drawablePadding="@dimen/_8sdp"
                    android:drawableTint="@color/primary_button_color"
                    android:fontFamily="@font/sf_ui_semibold"
                    android:gravity="center_vertical"
                    android:text="Add items"
                    android:visibility="gone"
                    android:textColor="@color/primary_button_color"
                    android:textSize="@dimen/sp_12_px" />
            </RelativeLayout>

            <TextView
                android:id="@+id/my_cart_instruction_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cart_item_count_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_8sdp"
                android:drawableLeft="@drawable/ic_swipe_hand"
                android:drawablePadding="@dimen/_8sdp"
                android:visibility="gone"
                android:fontFamily="@font/sf_ui_regular"
                android:text="Swipe on an item to delete"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_11_px" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/_my_cart_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_20sdp"
                android:layout_below="@+id/my_cart_instruction_tv" />

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:id="@+id/ll_data_not_available"
    android:layout_centerInParent="true"
    android:visibility="gone"
    android:orientation="vertical">
    <ImageView
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:src="@mipmap/ic_cart_not"/>



    <TextView
        android:id="@+id/nodata_label"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_10sdp"
        android:text="test"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/black"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="@dimen/_16sdp"/>
    </LinearLayout>


</RelativeLayout>




