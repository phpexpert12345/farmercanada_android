<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical"
    tools:context=".modules.seller.product.ProductSearchActivity">

    <RelativeLayout
        android:id="@+id/dialog_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/home_search_back_img"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:scaleType="center"
            android:src="@drawable/ic_arrow_back" />

        <LinearLayout
            android:id="@+id/search_box_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:layout_toRightOf="@+id/home_search_back_img"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/home_search_bottom_sheet_search_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/light_gray_round_border_bg"
                android:drawableStart="@drawable/ic_search"
                android:drawableLeft="@drawable/ic_search"
                android:drawablePadding="@dimen/_8sdp"
                android:fontFamily="@font/sf_ui_regular"
                android:hint="Find your items"
                android:padding="@dimen/_8sdp"
                android:singleLine="true" />

            <TextView
                android:id="@+id/home_search_bottom_sheet_search_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/round_corner_light_gradient_bg"
                android:padding="@dimen/_8sdp"
                android:text="Search"
                android:textColor="@color/secondaryTextColor"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_search_error_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/search_box_ll"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_200sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:src="@drawable/no_followers_found" />

            <TextView
                android:id="@+id/home_search_error_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_ui_regular"
                android:gravity="center_horizontal"
                android:text="Search Your Product"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/_12ssp" />


        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_search_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_box_ll"
            android:layout_marginBottom="@dimen/_10sdp" />
    </RelativeLayout>

</LinearLayout>