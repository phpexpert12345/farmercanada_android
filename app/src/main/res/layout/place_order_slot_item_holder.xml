<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/_8sdp"
    android:paddingRight="@dimen/_8sdp"
    android:paddingTop="@dimen/_8sdp"
    android:paddingBottom="@dimen/_8sdp"
    android:background="@drawable/light_red_border_transparent_gray_bg"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:id="@+id/place_order_slot_item_ll">

    <TextView
        android:id="@+id/place_order_slot_item_day_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="M"
        android:textSize="@dimen/sp_16_px"
        android:fontFamily="@font/sf_ui_bold"
        android:textColor="@color/primaryTextColor"
     />

    <TextView
        android:id="@+id/place_order_slot_item_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 jan"
        android:textSize="@dimen/sp_14_px"
        android:fontFamily="@font/sf_ui_regular"
        android:textColor="@color/primaryTextColor"
     />

</LinearLayout>