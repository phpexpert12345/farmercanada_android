<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".modules.seller.addProduct.AddProductActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/gray_border_transparent_bg"
        android:layout_margin="@dimen/_8sdp">

        <EditText
            android:id="@+id/add_product_name_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Product Name"
            android:padding="@dimen/_10sdp"
            android:background="@android:color/transparent"
            />

        <ImageView
            android:id="@+id/add_product_mic_img"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_mic"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity"
        android:textColorHint="@color/primaryTextColor"
        android:fontFamily="@font/sf_ui_regular"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_12ssp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_8sdp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/gray_border_transparent_bg"
            android:layout_marginRight="@dimen/_8sdp"
            android:padding="@dimen/_1sdp">

            <ImageView
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:src="@drawable/ic_add_minus_black_gray"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="@dimen/_16ssp"
                android:fontFamily="@font/sf_ui_regular"
                android:textColor="@color/primaryTextColor"
                android:layout_centerInParent="true"/>

            <ImageView
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:src="@drawable/ic_add_plus_black_gray"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/gray_border_transparent_bg"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_8sdp"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="each"
                android:background="@null"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/sf_ui_regular"
                android:textColor="@color/primaryTextColor"
                android:padding="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_5sdp"

                />


        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textColorHint="@color/primaryTextColor"
        android:fontFamily="@font/sf_ui_regular"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_12ssp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_8sdp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:background="@drawable/gray_border_transparent_bg"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_8sdp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grocery"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/sf_ui_regular"
                android:textColor="@color/primaryTextColor"
                android:padding="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:drawableRight="@drawable/ic_light_gray_drop_arrow"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:orientation="horizontal"
            android:visibility="gone"
            android:background="@drawable/light_gray_rect_bg"
            android:backgroundTint="@color/secondaryBtnColor"
            android:layout_gravity="center"
            android:padding="@dimen/_8sdp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create New"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/sf_ui_semibold"
                android:textColor="@color/secondaryTextColor"
                android:layout_marginLeft="@dimen/_5sdp"
                />


        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unit Price"
        android:textColorHint="@color/primaryTextColor"
        android:fontFamily="@font/sf_ui_regular"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_12ssp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/gray_border_transparent_bg"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        >
        <ImageView
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:src="@drawable/ic_dollar"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/_2sdp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="10.00"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/sf_ui_semibold"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textColorHint="@color/primaryTextColor"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List total: $ 100:00 "
        android:textColorHint="@color/primaryTextColor"
        android:fontFamily="@font/sf_ui_regular"
        android:layout_marginLeft="@dimen/_8sdp"
        android:textSize="@dimen/_10ssp"
        android:drawableLeft="@drawable/ic_info_gray"
        android:drawablePadding="@dimen/_5sdp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sales Price"
        android:textColorHint="@color/primaryTextColor"
        android:fontFamily="@font/sf_ui_regular"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_12ssp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/gray_border_transparent_bg"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        >
        <ImageView
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:src="@drawable/ic_dollar"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/_2sdp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="10.00"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/sf_ui_semibold"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textColorHint="@color/primaryTextColor"/>
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:layout_margin="@dimen/_8sdp"
        android:layout_gravity="top"
        android:gravity="top"
        android:hint="Note"
        android:paddingLeft="@dimen/_8sdp"
        android:background="@drawable/gray_border_transparent_bg"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_16sdp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="@drawable/round_corner_ligh_green_bg"
        android:backgroundTint="@color/secondaryBtnColor"
        android:textColor="@color/secondaryTextColor"/>



</LinearLayout>