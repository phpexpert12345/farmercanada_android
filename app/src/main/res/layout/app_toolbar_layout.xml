<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dummy_base_toolbar"
    android:background="@color/white">

    <ImageView
        android:id="@+id/image_back_button"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_7sdp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_white_back_arrow"

        app:tint="@color/black" />

    <TextView
        android:id="@+id/text_screen_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_14ssp"
        tools:text="Screen Title"
        android:fontFamily="@font/sf_ui_semibold"/>

    <ImageView
        android:id="@+id/image_more_btn"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp_16_px"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:layout_marginRight="@dimen/dp_16_px" />
</RelativeLayout>