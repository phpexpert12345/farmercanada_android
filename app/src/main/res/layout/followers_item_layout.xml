<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_8sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_8sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/followers_item_user_image"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/farm_icon_image" />

        <TextView
            android:id="@+id/followers_item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_toRightOf="@id/followers_item_user_image"
            android:fontFamily="@font/sf_ui_bold"
            android:text="Kin's Farm Market" />

        <TextView
            android:id="@+id/followers_item_distance_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/followers_item_name_tv"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_toRightOf="@id/followers_item_user_image"
            android:fontFamily="@font/sf_ui_regular"
            android:text="2km Away from you" />

        <TextView
            android:id="@+id/followers_item_un_follow_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/followers_item_distance_tv"
            android:layout_alignParentEnd="true"
            android:background="@color/primary_button_color"
            android:fontFamily="@font/sf_ui_regular"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingRight="@dimen/_8sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:text="Unfollow"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/ic_unfollow"
            android:drawablePadding="@dimen/_5sdp"
            android:gravity="center_vertical"
            />


    </RelativeLayout>
</androidx.cardview.widget.CardView>
