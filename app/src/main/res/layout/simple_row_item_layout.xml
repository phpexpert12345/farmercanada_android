<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/simple_row_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_minus8sdp"
    android:gravity="center_vertical"
    >

    <ImageView
        android:id="@+id/simple_row_item_left_imageView"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        android:src="@drawable/ic_user_light_red_bg"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/simple_row_item_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_toEndOf="@+id/simple_row_item_left_imageView"
        android:fontFamily="@font/sf_ui_semibold"
        android:text="Edit Profile"
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/simple_row_item_right_imageView"
        android:layout_width="@dimen/_12sdp"
        android:layout_height="@dimen/_12sdp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_forward"
        android:layout_centerVertical="true"/>

    <View
        android:id="@+id/simple_row_item_divider_item"
        android:layout_below="@+id/simple_row_item_right_imageView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/transparent_gray"
        android:layout_marginTop="@dimen/_16sdp"
        />

</RelativeLayout>