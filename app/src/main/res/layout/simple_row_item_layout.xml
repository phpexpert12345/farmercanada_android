<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/simple_row_layout"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_8sdp"
    android:layout_margin="@dimen/_12sdp">

    <ImageView
        android:id="@+id/simple_row_item_left_imageView"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/ic_user_light_red_bg"/>

    <TextView
        android:id="@+id/simple_row_item_title_tv"
        android:layout_toRightOf="@+id/simple_row_item_left_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:layout_marginLeft="@dimen/_8sdp"
        android:fontFamily="@font/sf_ui_regular"
        android:textColor="@color/primaryTextColor"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/simple_row_item_right_imageView"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/ic_arrow_back"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

</RelativeLayout>