<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_8sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    >

    <RelativeLayout
        android:id="@+id/notification_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/notification_list_item_image"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/farm_image"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_toStartOf="@+id/notification_list_item_date_tv"
            android:layout_toEndOf="@id/notification_list_item_image"
            android:layout_marginStart="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Id:"
                    android:visibility="gone"
                    android:fontFamily="@font/sf_ui_regular"
                    android:textSize="@dimen/_12sdp"/>

                <TextView
                    android:id="@+id/notification_item_order_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#C99CN002"
                    android:visibility="gone"
                    android:fontFamily="@font/sf_ui_semibold"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="@dimen/_13sdp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/notification_list_item_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="Kin's Farm Market"
                android:fontFamily="@font/sf_ui_regular"/>


            <TextView
                android:id="@+id/notification_list_item_status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                android:fontFamily="@font/sf_ui_regular"
                android:text="Order Placed" />



        </LinearLayout>

        <TextView
            android:id="@+id/notification_list_item_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23-12-2020"
            android:fontFamily="@font/sf_ui_regular"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/_11sdp"/>


    </RelativeLayout>


</androidx.cardview.widget.CardView>