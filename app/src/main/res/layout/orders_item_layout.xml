<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/order_item_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8sdp"
    android:padding="@dimen/_8sdp"
    app:cardCornerRadius="@dimen/_8sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_16sdp">

        <TextView
            android:id="@+id/order_item_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/sf_ui_regular"
            android:text="10:30 pm"
            android:textColorHint="@color/primaryTextColor"
            android:textSize="@dimen/sp_12_px" />

        <TextView
            android:id="@+id/order_item_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_item_time_tv"
            android:fontFamily="@font/sf_ui_semibold"
            android:text="Pomegranate (Name)"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/sp_16_px" />

        <TextView
            android:id="@+id/order_item_order_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_item_title_tv"
            android:fontFamily="@font/sf_ui_regular"
            android:text="Order Id:" />

        <TextView
            android:id="@+id/order_item_order_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_item_title_tv"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_toRightOf="@+id/order_item_order_tv"
            android:fontFamily="@font/sf_ui_semibold"
            android:text="#79872542"
            android:textColor="@color/primary_button_color" />

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_below="@+id/order_item_title_tv"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_forward" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>