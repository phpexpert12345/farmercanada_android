<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8sdp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_ui_regular"
        android:gravity="end"
        android:text="12-02-2020 10:30 AM"
        android:textSize="@dimen/sp_12_px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_8sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/sub_order_item_farm_image"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/farm_image" />

        <LinearLayout
            android:id="@+id/sub_order_item_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_toRightOf="@id/sub_order_item_farm_image"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_ui_regular"
                android:text="Kin's Farm Market"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/sp_16_px" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_ui_regular"
                    android:text="Order Id:"
                    android:textSize="@dimen/sp_12_px" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:fontFamily="@font/sf_ui_regular"
                    android:text="#7338937"
                    android:textColor="@color/primary_button_color"
                    android:textSize="@dimen/sp_14_px" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp">

        <TextView
            android:id="@+id/track_order_header_estimate_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_ui_regular"
            android:text="Estimate Delivery"
            android:textSize="@dimen/sp_12_px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/track_order_header_estimate_tv"
            android:fontFamily="@font/sf_ui_regular"
            android:text="Tomorrow, 10 AM - 3 PM"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/sp_14_px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/light_red_border_bg"
            android:drawableRight="@drawable/ic_edit"
            android:drawablePadding="@dimen/_8sdp"
            android:fontFamily="@font/sf_ui_regular"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingRight="@dimen/_8sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:text="Change"
            android:textColor="@color/primary_button_color"
            android:textSize="@dimen/sp_12_px" />

    </RelativeLayout>

    <params.com.stepview.StatusViewScroller
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:entries="@array/labels2"
        android:fitsSystemWindows="true"
        app:circleColor="@android:color/transparent"
        app:circleColorCurrent="@android:color/transparent"
        app:circleColorIncomplete="@color/light_gray"
        app:circleStrokeWidth="0dp"
        app:completeDrawable="@drawable/ic_checked_green"
        app:currentCount="4"
        app:currentDrawable="@drawable/ic_unchecked_right_circle"
        app:drawLabels="true"
        app:incompleteDrawable="@drawable/ic_unchecked_right_circle"
        app:lineColor="@color/light_gray"
        app:lineColorCurrent="@color/light_gray"
        app:lineColorIncomplete="@color/light_gray"
        app:lineGap="0dp"
        app:lineWidth="@dimen/_1sdp"
        app:stepCount="4"
        app:textColorLabels="@android:color/transparent"
        app:textColorLabelsCurrent="@color/white"
        app:textColorLabelsIncomplete="@color/black"
        app:textSizeLabels="15sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5_px"
        android:background="@drawable/divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_ui_semibold"
            android:text="10 items" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/total_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/sf_ui_semibold"
                android:text="Total:" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_toRightOf="@+id/total_text"
                android:fontFamily="@font/sf_ui_bold"
                android:text="$ 155.80"
                android:textColor="@color/primary_button_color" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>