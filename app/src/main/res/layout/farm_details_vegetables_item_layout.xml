<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_120sdp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_5sdp"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_8sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90sdp"
            android:gravity="center"
            android:background="@color/transparent_gray"
            >
            <ImageView
                android:id="@+id/farm_detail_vegetables_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/farm_image"
                android:scaleType="centerCrop"
                />

        </LinearLayout>



        <TextView
            android:id="@+id/home_list_item_layout_farmName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:fontFamily="@font/sf_ui_semibold"
            android:textSize="@dimen/sp_14_px"
            android:textColor="@color/primaryTextColor"
            android:text="Farm name"
            android:layout_marginLeft="@dimen/_3sdp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:padding="@dimen/_3sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$12.00"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 kg"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:paddingTop="@dimen/_3sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:drawableRight="@drawable/ic_drop_arror"
                android:background="@drawable/gray_border_white_bg"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/farm_details_vegetables_add_to_cart_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:fontFamily="@font/sf_ui_semibold"
            android:textSize="@dimen/sp_14_px"
            android:textColor="@color/secondaryTextColor"
            android:text="Add to cart"
            android:drawableLeft="@drawable/ic_info"
            android:drawableTint="@color/white"
            android:drawablePadding="@dimen/_5sdp"
            android:background="@color/primary_button_color"
            android:padding="@dimen/_5sdp"
            android:gravity="center_vertical"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>