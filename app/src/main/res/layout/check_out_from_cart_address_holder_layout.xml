<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_16sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/light_red_border_bg"
        android:id="@+id/my_address_layout"

        >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_margin="@dimen/_5sdp"
            android:src="@drawable/ic_location_red_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp">

            <TextView
                android:id="@+id/my_address_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My home address"
                android:textSize="@dimen/sp_12_px"
                android:fontFamily="@font/sf_ui_regular"/>

            <TextView
                android:id="@+id/my_address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4623 William Head Rd"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/sp_14_px"
                android:singleLine="true"
                android:fontFamily="@font/sf_ui_semibold"/>

            <TextView
                android:id="@+id/my_address_detail_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Victoria, BC V9C 3Y7, Canada"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/sp_12_px"
                android:singleLine="true"
                android:fontFamily="@font/sf_ui_regular"/>


        </LinearLayout>

        <TextView
            android:id="@+id/address_change_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_ui_semibold"
            android:text="Change"
            android:textSize="@dimen/sp_12_px"
            android:textColor="@color/primary_button_color"
            android:drawableRight="@drawable/ic_edit_gray"
            android:drawableTint="@color/primary_button_color"
            android:drawablePadding="@dimen/_5sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
